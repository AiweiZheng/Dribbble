<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zheng.project.android.dribbble.view.base.TranslateDraweeView
        android:id="@+id/user_detail_user_picture"
        android:layout_width="@dimen/nav_header_user_picture_size"
        android:layout_height="@dimen/nav_header_user_picture_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        fresco:placeholderImage="@drawable/user_picture_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>

    <LinearLayout
        android:id="@+id/user_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_detail_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Micheal Korwin"
            android:layout_marginTop="@dimen/spacing_small"
            style="@style/AppTheme.TextView.3"/>
        <TextView
            android:id="@+id/user_detail_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:autoLink="email"
            tools:text="Let's create something unique together"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/user_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="boston,MA"/>

        <TextView
            android:id="@+id/user_detail_shots_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_adjust_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="40 shots"/>

        <TextView
            android:id="@+id/user_detail_project_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_folder_open_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="2 projects"/>

        <TextView
            android:id="@+id/user_detail_followers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_people_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="6367 followers"/>
        <TextView
            android:id="@+id/user_detail_following_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_people_outline_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="546 followings"/>
        <TextView
            android:id="@+id/user_detail_bucket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_inbox_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="6 buckets"/>
        <TextView
            android:id="@+id/user_detail_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_medium"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
            style="@style/AppTheme.TextView.2.Dark"
            tools:text="2721 likes"/>
    </LinearLayout>

</LinearLayout>