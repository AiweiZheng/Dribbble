<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bucket_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/bucket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bucket_name_text_color"
            android:textSize="@dimen/bucket_name_text_size"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bucket_shot_chosen"
            tools:text="Bucket name"/>

        <TextView
            android:id="@+id/bucket_shot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_xsmall"
            android:layout_below="@+id/bucket_name"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bucket_shot_chosen"
            tools:text="90 shots"
            />

        <ImageView
            android:id="@+id/bucket_shot_chosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/bucket_options_menu"
            android:layout_width="@dimen/bucket_options_menu_size"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_move_vert_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>